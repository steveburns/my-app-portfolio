<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:id="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/SpotifyButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="displaySpotifyStreamer" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/ScoresButton"
        android:layout_below="@+id/SpotifyButton"
        android:layout_centerHorizontal="true"
        android:onClick="displayScoresApp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/LibraryButton"
        android:layout_below="@+id/ScoresButton"
        android:layout_centerHorizontal="true"
        android:onClick="displayLibraryApp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/BuildBiggerButton"
        android:layout_below="@+id/LibraryButton"
        android:layout_centerHorizontal="true"
        android:onClick="displayBuildItBigger" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/XyzReaderButton"
        android:layout_below="@+id/BuildBiggerButton"
        android:layout_alignLeft="@+id/ScoresButton"
        android:layout_alignStart="@+id/ScoresButton"
        android:onClick="displayXyzReader" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone: My own app"
        android:id="@+id/MyOwnAppButton"
        android:layout_below="@+id/XyzReaderButton"
        android:layout_centerHorizontal="true"
        android:onClick="displayCapstone" />

</RelativeLayout>
